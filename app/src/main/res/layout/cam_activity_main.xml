<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".CamMainActivity">

    <com.example.fizz.financewizard.SwipeMenuListView
        android:id="@+id/main_list_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:cacheColorHint="@color/button_material_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnAdd"
        android:src="@mipmap/camera131"
        android:background="@drawable/circle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentBottom="true"
        android:onClick="btnAddOnClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>