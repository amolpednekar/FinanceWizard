<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/goals_content_frame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewCashFlowSlot"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="30dp"
            android:gravity="right"
            android:textSize="22dp"
            android:text="Number of Goals :"
            android:id="@+id/goalNo1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="22dp"
            android:text="-"
            android:id="@+id/goalNo2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/goalNo1"
            android:layout_alignBottom="@+id/goalNo1"
            android:layout_toRightOf="@+id/goalNo1"
            android:layout_toEndOf="@+id/goalNo1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:text="Total Savings :"
            android:id="@+id/totalSavings1"
            android:layout_below="@+id/goalNo1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/goalNo1"
            android:layout_alignEnd="@+id/goalNo1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="22dp"
            android:text="-"
            android:id="@+id/totalSavings2"
            android:layout_alignTop="@+id/totalSavings1"
            android:layout_alignRight="@+id/goalNo2"
            android:layout_alignEnd="@+id/goalNo2"
            android:layout_alignBottom="@+id/totalSavings1"
            android:layout_toRightOf="@+id/totalSavings1"
            android:layout_toEndOf="@+id/totalSavings1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp"
            android:gravity="right"
            android:text="Category"
            android:id="@+id/category2"
            android:layout_below="@+id/totalSavings1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/totalSavings1"
            android:layout_alignEnd="@+id/totalSavings1"/>

    </RelativeLayout>

</FrameLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>
    </android.support.v4.widget.DrawerLayout>
